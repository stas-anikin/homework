<%- include('./partials/header')%>

<main class="container justify-content-center"><h1>View Cohort</h1>

<div class='card-deck'>
    <div class='card text-center mb-4' style="width: 55rem;">
      <div class='card-body'>
          <div class = "col-sm-6 col-md-3">
             <div class = "thumbnail">
                <img  class="card-img-top" src="<%= cohort.logo_url %>" alt="cohort logo">
             </div>
        </div>
        <h5 class='card-title'><%= cohort.name %></h5>
        <h6 class="card-text"><%= cohort.members%></h6>

      <form action='/<%= cohort.id %>' method='POST'>
      <input type='hidden' name='_method' value='DELETE'>
      <input
        type='submit'
        class='btn btn-outline-danger btn-lg btn-block'
        value='Delete'
      >
    </form>
    <a class='btn btn-outline-success btn-lg ' href='/edit/<%=cohort.id%>'>Edit</a>
    
</div>           
<form action='/assign' method='POST'>

  <input class='hidden' type='text' class='form-control' name='members'
  value='<%= cohort.members%>'>

<div name='members' id='members' class='hidden'><%= cohort.members%></div>
  <div class="form-group">
        <div class="btn-group btn-group-toggle" data-toggle="buttons">
 <label class="btn active">
            <input type="radio" name="method" id="team_count" value='team_count' autocomplete="off" checked> Team count
          </label>
          <label class="btn">
            <input type="radio" name="method" id="per_team" value='per_team' autocomplete="off"> Number per team
          </label>
        </div>
  

     
<div class='card mb-4' style="width: 55rem;">
  <div class='card-body'>
     <div class="form-group">
          <label>Quantity</label>
          <input type="text" name="number" class="form-control" value="">
        </div>
      <input
    type='submit'
    class='btn btn-outline-primary btn-lg btn-block'
    value='Assign Teams'
  >        

  </form>


</main>
<%- include('./partials/footer')%>
